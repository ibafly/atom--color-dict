{
  "name": "color-dict",
  "version": "0.7.0",
  "description": "More color name&value, two-way converting.",
  "main": "./lib/color-dict",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationCommands": {
    "atom-workspace": "color-dict:convert"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ibafly/atom--color-dict"
  },
  "homepage": "https://github.com/ibafly/atom--color-dict#readme",
  "keywords": [
    "color names",
    "color name list",
    "less",
    "sass",
    "name that color"
  ],
  "license": "MIT",
  "mocha": {
    "bail": false,
    "ui": "bdd"
  },
  "dependencies": {
    "color-name-list": "5.28.0",
    "lodash": "4.17.12",
    "nearest-color": "0.4.4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.0",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "*",
    "husky": "^3.0.0",
    "mocha": "*",
    "standard": "*",
    "standard-version": "^6.0.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "atom",
      "describe"
    ]
  },
  "babel": {
    "sourceMaps": "inline",
    "retainLines": true,
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": []
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "ci/test": "npm run lint && npm run test",
    "ci/commit": "commitlint -e $GIT_PARAMS",
    "lint": "standard --recursive lib test && echo Linting passed",
    "lint:format": "standard --fix 'src/**/*.js'",
    "test": "mocha --require @babel/register --timeout 25000 --colors",
    "test:watch": "mocha -w --require @babel/register --timeout 25000 --colors",
    "ci/watch": "npm run lint && npm run test.watch"
  }
}
